<Restoration>:
    size_hint: 1, 1
    md_bg_color: get_color_from_hex("#111111")
    MDCard:
        radius: [5,]
        elevation: 1
        md_bg_color: get_color_from_hex("#2C2C2C")
        size_hint: None, None
        size: (522.45, 489.0)
        pos_hint: {"center_x": .5, "center_y": .5}

        MDBoxLayout:
            orientation: "horizontal"
            size: self.parent.size
            pos: self.parent.pos
            padding: [0,]
            spacing: 5

            MDRelativeLayout:
                MDLabel:
                    text: "Restaurer le mot de passe"
                    valign: "center"
                    halign: "center"
                    font_size: '20dp'
                    color: get_color_from_hex("#CCCCCC")
                    pos_hint: {"center_x": .5, "center_y": .9}

                MDTextField:
                    id: color_id
                    size_hint_x: .9
                    multiline: False
                    mode: "rectangle"
                    radius: [2, ]
                    hint_text: "Couleur préférée (*)"
                    pos_hint: {"center_x": .5, "center_y": .75}
                    on_text_validate: town_id.focus = True

                MDTextField:
                    id: town_id
                    size_hint_x: .9
                    multiline: False
                    mode: "rectangle"
                    radius: [2, ]
                    hint_text: "Ville de naissance (*)"
                    pos_hint: {"center_x": .5, "center_y": .60}
                    on_text_validate: language_id.focus = True

                MDTextField:
                    id: language_id
                    size_hint_x: .9
                    multiline: False
                    mode: "rectangle"
                    radius: [2, ]
                    hint_text: "Première langue (*)"
                    pos_hint: {"center_x": .5, "center_y": .45}
                    on_text_validate: school_id.focus = True

                MDTextField:
                    id: school_id
                    size_hint_x: .9
                    multiline: False
                    mode: "rectangle"
                    radius: [2, ]
                    hint_text: "Première école (*)"
                    pos_hint: {"center_x": .5, "center_y": .30}

                MDBoxLayout:
                    size_hint_x: .9
                    spacing: dp(10)
                    orientation: "horizontal"
                    pos_hint: {"center_x": .5, "center_y": .10}

                    MDRaisedButton:
                        text: "Annuler"
                        size_hint_x: 1
                        pos_hint: {"center_x": .5, "center_y": .5}
                        on_release: app.SCREEN_MANAGER.pop()

                    MDRaisedButton:
                        text: "Valider"
                        size_hint_x: 1
                        pos_hint: {"center_x": .5, "center_y": .5}
                        on_release: root.restore_password()